page{
  color: #616161;
  font-size: 35rpx;
}
.detailbannerimage{
  width: 100%;
  height:100%;
}
.detailbannerimages{
  height: 650rpx;
}
.detail-price{
  display: inline-block;
   width: 50%;
   color: red;
}
.sellcount{
  display: inline-block;
  width: 50%;
  text-align: right;
}
.slice{
  color: #2196f3;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  }
._detailimages{
  margin-bottom: 100rpx;
}  
.detailimages{
width: 100%;
}
.detailimages image{
  width: 100%;
  height: 750rpx;
}
.gobuy{
  position: fixed;
  justify-content: space-between;
  display: flex;
  bottom: 0;
}
.gobuy button{
  width: 400rpx;
  height: 100rpx;
  border-radius: 0rpx;
  color: white;
}
.addcar{
  background: #90caf9;
}
.buyonce{
  background-color: #64b5f6;
}
.cart{
   height: 80rpx;
   width: 80rpx;
   
   position: fixed;
   top:800rpx;
   background-color: #e3f2fd;
   
   border-radius:50%; 
   right: 0;

}
.cart .mountans{
  display: block;
  height: 35rpx;
  width: 35rpx;
  border-radius:50%; 
  opacity: 1;
  background-color: red;
  position: absolute;
  text-align: center;
  line-height: 35rpx;
  font-size: 25rpx;
  top: 0rpx;
  right: 0;

}
.cart image{
  height: 60rpx;
  width: 60rpx;
  margin: 10rpx;
  position: relative;
}
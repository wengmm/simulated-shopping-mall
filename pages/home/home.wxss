.search{
  width: 640rpx;
  display: flex;
  margin: 10rpx;
  margin-left: 50rpx;
  
}
.search icon{
  background-color: #e5e5e5;
  padding:0 5rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
map{
  height: 350rpx;
  width: 100%;
}
.search_input{
  width: 100%;
  height: 100%;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-color: #e5e5e5;
  font-size: 22rpx;
  
}
.banner-image{
  width: 100%;
  height: 300rpx;
}
.drop-down{
  display: flex;
  font-size: 28rpx;
}
.drop-down image{
  
  height: 40rpx;
  width: 40rpx;
  
}
.news-list{ 
  position: relative;
  width: 600rpx;
  /* overflow: hidden; */
 
}
.list-hidden{
  /* border: 1px solid red; */
  white-space: nowrap;
  
}
.hot{
  width: 120rpx;
}
.news{
  text-align: center;
  width: 150rpx;
  display: inline-block;
  position: relative;
   
  
}
.news.new{
   color: #2196f3;
}
.news.new::after{
 
  content:'';
  position: absolute;
  left:45rpx;
  top: 32rpx;
 /* // bottom: 10rpx; */
  height:0;
  width: 60rpx;
  border-bottom: 4rpx solid #2196f3;
  
 
  }

.hidden-drop{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  position: absolute; 
  background: white;
  z-index: 10;
}
.list-item{
  width: 150rpx;
  height: 50rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  margin: 10rpx;
  
  background-color: #e3f2fd;
}
.chose-car{
  position: relative;
  height: 50rpx;
  color: #616161;
}
.list{
  display: flex;
  flex-wrap: wrap;
  font-size: 15rpx;
  
}
.contain{
  width: 186rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.list-img{
  height: 100rpx;
  width: 100rpx;
  
}
.title{
  text-align: center;
}
.recommend{
  color:#2196f3;
  font-size: 30rpx;
  text-align: center;
  display:block;
  margin-top:20rpx; 
